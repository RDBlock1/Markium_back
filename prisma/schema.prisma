//new prisma model file

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Account {
  id                String  @id @default(cuid())
  accountId         String? @map("account_id")  // optional
  userId            String  @map("user_id")
  type              String?                       // <- made optional
  providerId          String?
  providerAccountId String? @map("provider_account_id")
  refresh_token     String? @db.Text
  refreshToken String?
  access_token      String? @db.Text
  accessToken String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  idToken String?
  session_state     String?
accessTokenExpiresAt DateTime? @map("access_token_expires_at")
createdAt        DateTime?  @map("created_at")
updatedAt        DateTime?  @map("updated_at")
sessionToken   String?  @map("session_token")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, providerAccountId])
  @@unique([providerId, accountId])
  @@map("accounts")
}



model Session {
  id           String    @id @default(cuid())
  // Prisma field name matches Better-Auth payload (sessionToken)
  // Map it to your DB column "session_token"
  sessionToken String ?    @map("session_token") @default(uuid())
  token        String?    @unique @default(uuid()) @map("token")  // Better-Auth primary lookup field

  userId       String    @map("user_id")
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Better-Auth sends `expiresAt` (Date). Map to your DB column "expires" (if that's what exists).
  // Keep it optional initially to avoid destructive migration.
  expiresAt    DateTime? @map("expires")

  // Extra metadata Better-Auth may send
  ipAddress    String?   @map("ip_address")
  userAgent    String?   @map("user_agent")

  // Timestamps (keep them in DB; non-destructive defaults)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime   @default(now()) @updatedAt @map("updated_at")
  @@map("sessions")
}


model User {
  id                    String               @id @default(cuid())
  name                  String?
  email                 String               @unique
  emailVerified         Boolean?          @default(false) @map("email_verified")
  password              String? // for Credentials
  verifyToken           String? // for email verification
  verifyTokenExpiry     DateTime? // for email verification
    walletAddress   String?   @unique
  clobApiKey      String?
  clobSecret      String?  
  clobPassphrase  String?  
  image                 String?
  accounts              Account[]
  sessions              Session[]
  blogPost              BlogPost[]
  createdAt             DateTime             @default(now()) @map("created_at")
  updatedAt             DateTime             @updatedAt @map("updated_at")
  accessToken           String?              @map("access_token")
  telegramIntegrationId String?              @map("telegram_integration_id")
  telegramIntegration   TelegramIntegration?
  watchLists            WatchList[]
  conversations        Conversation[]
  rulesConversations   RulesConversation[]


  @@map("users")
}

