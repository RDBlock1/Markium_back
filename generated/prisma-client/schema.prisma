generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// EXISTING MODELS (Keep your existing User, Session, Account, etc.)
// ============================================================================

model User {
  id                    String               @id @default(cuid())
  name                  String?
  email                 String               @unique
  emailVerified         Boolean?             @default(false) @map("email_verified")
  password              String?
  verifyToken           String?
  verifyTokenExpiry     DateTime?
  walletAddress         String?              @unique
  clobApiKey            String?
  clobSecret            String?
  clobPassphrase        String?
  image                 String?
  accounts              Account[]
  sessions              Session[]
  blogPost              BlogPost[]
  createdAt             DateTime             @default(now()) @map("created_at")
  updatedAt             DateTime             @updatedAt @map("updated_at")
  accessToken           String?              @map("access_token")
  telegramIntegrationId String?              @map("telegram_integration_id")
  telegramIntegration   TelegramIntegration?
  watchLists            WatchList[]
  conversations         Conversation[]
  rulesConversations    RulesConversation[]

  @@map("users")
}

model Account {
  id                   String    @id @default(cuid())
  accountId            String?   @map("account_id")
  userId               String    @map("user_id")
  type                 String?
  providerId           String?
  providerAccountId    String?   @map("provider_account_id")
  refresh_token        String?   @db.Text
  refreshToken         String?
  access_token         String?   @db.Text
  accessToken          String?
  expires_at           Int?
  token_type           String?
  scope                String?
  id_token             String?   @db.Text
  idToken              String?
  session_state        String?
  accessTokenExpiresAt DateTime? @map("access_token_expires_at")
  createdAt            DateTime? @map("created_at")
  updatedAt            DateTime? @map("updated_at")
  sessionToken         String?   @map("session_token")
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, providerAccountId])
  @@unique([providerId, accountId])
  @@map("accounts")
}

model Session {
  id           String    @id @default(cuid())
  sessionToken String?   @unique @default(uuid()) @map("session_token")
  token        String?   @unique @default(uuid()) @map("token")
  userId       String    @map("user_id")
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt    DateTime? @map("expires")
  ipAddress    String?   @map("ip_address")
  userAgent    String?   @map("user_agent")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @default(now()) @updatedAt @map("updated_at")

  @@map("sessions")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([identifier, value])
  @@map("verifications")
}

// ============================================================================
// ALERT SYSTEM
// ============================================================================

model Alert {
  id              String            @id @default(cuid())
  userId          String
  userEmail       String
  walletAddress   String // Polymarket proxy wallet address
  tradeType       String // 'both', 'buy', 'sell'
  minAmount       String?
  market          String // 'all', 'sports', 'politics', 'crypto', 'pop-culture'
  notifyVia       String // 'app', 'email', 'both'
  telegramNotify  Boolean           @default(false)
  isActive        Boolean           @default(true)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  notifications   NotificationLog[]
  monitoredWallet MonitoredWallet?

  @@index([userId])
  @@index([userEmail])
  @@index([walletAddress])
  @@index([isActive])
  @@map("Alert")
}

// ============================================================================
// TELEGRAM INTEGRATION
// ============================================================================

model TelegramIntegration {
  id          String   @id @default(cuid())
  userId      String
  userName    String
  chatId      String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String   @unique
  createdBy   User     @relation(fields: [createdById], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@map("TelegramIntegration")
}

// ============================================================================
// POLYMARKET ACTIVITY MONITORING
// ============================================================================

// Track which proxy wallets are being monitored
model MonitoredWallet {
  id                    String   @id @default(cuid())
  proxyWallet           String   @unique // Polymarket proxy wallet address
  alertId               String   @unique // Link to the alert
  alert                 Alert    @relation(fields: [alertId], references: [id], onDelete: Cascade)
  lastActivityTimestamp Int? // Unix timestamp of last processed activity
  lastActivityHash      String? // Transaction hash to prevent duplicates
  totalActivities       Int      @default(0)
  lastCheckedAt         DateTime @default(now())
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([proxyWallet])
  @@index([isActive])
  @@index([lastCheckedAt])
  @@map("MonitoredWallet")
}

// Store raw activities from Polymarket API
model PolymarketActivity {
  id               String   @id @default(cuid())
  proxyWallet      String
  timestamp        Int // Unix timestamp from API
  conditionId      String
  type             String // 'BUY', 'SELL', 'REDEEM', etc.
  size             Float
  usdcSize         Float
  transactionHash  String   @unique
  price            Float?
  asset            String?
  side             String? // 'YES' or 'NO'
  outcomeIndex     Int?
  title            String
  slug             String
  icon             String?
  eventSlug        String?
  outcome          String?
  processed        Boolean  @default(false)
  notificationSent Boolean  @default(false)
  createdAt        DateTime @default(now())

  @@index([proxyWallet])
  @@index([timestamp])
  @@index([transactionHash])
  @@index([processed])
  @@index([type])
  @@map("PolymarketActivity")
}

// Track monitoring cron job runs
model MonitoringJobLog {
  id                  String    @id @default(cuid())
  jobType             String    @default("wallet_monitor")
  status              String // 'started', 'completed', 'failed'
  walletsChecked      Int       @default(0)
  activitiesFound     Int       @default(0)
  activitiesProcessed Int       @default(0)
  notificationsQueued Int       @default(0)
  duration            Int? // milliseconds
  error               String?
  startedAt           DateTime  @default(now())
  completedAt         DateTime?

  @@index([jobType])
  @@index([status])
  @@index([startedAt])
  @@map("MonitoringJobLog")
}

// ============================================================================
// NOTIFICATION SYSTEM
// ============================================================================

// Queue for pending notifications
model NotificationQueue {
  id            String             @id @default(cuid())
  userId        String
  userEmail     String
  alertId       String
  walletAddress String
  activityId    String? // Reference to PolymarketActivity
  tradeType     String // 'buy', 'sell', 'redeem'
  amount        String
  market        String
  marketId      String?
  marketUrl     String?
  marketIcon    String?
  notifyVia     String // 'email', 'telegram', or 'both'
  status        NotificationStatus @default(PENDING)
  attempts      Int                @default(0)
  maxAttempts   Int                @default(3)
  error         String?
  scheduledFor  DateTime           @default(now())
  processedAt   DateTime?
  createdAt     DateTime           @default(now())

  @@index([status])
  @@index([scheduledFor])
  @@index([userId])
  @@index([alertId])
  @@index([activityId])
  @@map("NotificationQueue")
}

enum NotificationStatus {
  PENDING
  PROCESSING
  SENT
  FAILED
  CANCELLED
}

// Log of all sent notifications
model NotificationLog {
  id            String   @id @default(cuid())
  userId        String
  userEmail     String
  alertId       String
  alert         Alert    @relation(fields: [alertId], references: [id], onDelete: Cascade)
  walletAddress String
  activityId    String? // Reference to PolymarketActivity
  tradeType     String
  amount        String
  market        String
  notifyVia     String // 'email' or 'telegram'
  status        String // 'sent', 'failed'
  error         String?
  sentAt        DateTime @default(now())

  @@index([userId])
  @@index([alertId])
  @@index([sentAt])
  @@index([activityId])
  @@map("NotificationLog")
}

// Track notification cron job runs
model CronJobLog {
  id          String    @id @default(cuid())
  jobType     String // 'notification_processor', 'cleanup', etc.
  status      String // 'started', 'completed', 'failed'
  processed   Int       @default(0)
  failed      Int       @default(0)
  duration    Int? // milliseconds
  error       String?
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@index([jobType])
  @@index([status])
  @@index([startedAt])
  @@map("CronJobLog")
}

// ============================================================================
// OTHER EXISTING MODELS
// ============================================================================

model Conversation {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title      String?
  createdAt  DateTime  @default(now())
  isFavorite Boolean   @default(false)
  updatedAt  DateTime  @updatedAt
  messages   Message[]

  @@index([userId])
  @@map("Conversation")
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  type           String
  content        String       @db.Text
  images         String[]
  completed      Boolean      @default(true)
  marketData     Json?
  createdAt      DateTime     @default(now())

  @@index([conversationId])
  @@index([createdAt])
  @@map("Message")
}

model RulesConversation {
  id         String         @id @default(cuid())
  userId     String
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  title      String?
  createdAt  DateTime       @default(now())
  isFavorite Boolean        @default(false)
  updatedAt  DateTime       @updatedAt
  messages   RulesMessage[]

  @@index([userId])
  @@map("RulesConversation")
}

model RulesMessage {
  id             String            @id @default(cuid())
  conversationId String
  conversation   RulesConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  type           String
  content        String            @db.Text
  images         String[]
  completed      Boolean           @default(true)
  marketData     Json?
  createdAt      DateTime          @default(now())

  @@index([conversationId])
  @@index([createdAt])
  @@map("RulesMessage")
}

model WatchList {
  id                     String    @id @default(cuid())
  userId                 String
  marketId               String
  triggerType            String
  triggerValue           Float?
  frequency              String    @default("IMMEDIATE")
  isActive               Boolean   @default(true)
  isEmailNotification    Boolean   @default(false)
  isTelegramNotification Boolean   @default(false)
  lastNotifiedAt         DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  user                   User      @relation(fields: [userId], references: [id])

  @@map("WatchList")
}

model Market {
  id            String    @id @default(cuid())
  conditionId   String    @unique
  marketId      String?
  question      String    @db.Text
  slug          String?
  liquidity     Float     @default(0)
  volume        Float     @default(0)
  volume24hr    Float     @default(0)
  active        Boolean   @default(true)
  closed        Boolean   @default(false)
  archived      Boolean   @default(false)
  image         String?
  category      String?
  tags          String[]
  outcomes      String[]
  outcomePrices Float[]
  startDate     DateTime?
  endDate       DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([conditionId])
  @@index([active, closed])
  @@index([volume24hr])
  @@index([liquidity])
  @@index([createdAt])
  @@index([category])
  @@index([slug])
  @@map("Market")
}

model ProxyWallet {
  id        String   @id @default(cuid())
  address   String   @unique
  createdAt DateTime @default(now())

  @@index([address])
  @@map("ProxyWallet")
}

model SyncHistory {
  id            String     @id @default(cuid())
  startedAt     DateTime   @default(now())
  completedAt   DateTime?
  marketsFound  Int        @default(0)
  marketsStored Int        @default(0)
  marketsFailed Int        @default(0)
  walletsFound  Int        @default(0)
  walletsStored Int        @default(0)
  status        SyncStatus @default(RUNNING)
  error         String?

  @@index([startedAt])
  @@index([status])
  @@map("SyncHistory")
}

enum SyncStatus {
  RUNNING
  COMPLETED
  FAILED
}

model UserAnalytics {
  id                 String               @id @default(cuid())
  address            String               @unique
  totalVolume        Float                @default(0)
  totalProfit        Float                @default(0)
  positionValue      Float                @default(0)
  totalTrades        Int                  @default(0)
  totalPositions     Int                  @default(0)
  averageWinRate     Float                @default(0)
  avgMonthlyProfit   Float                @default(0)
  avgMonthlyTrades   Int                  @default(0)
  mostTradedCategory String?
  tradingStyle       String?
  riskProfile        String?
  marketDistribution MarketDistribution[]
  buySellData        BuySellData?
  tradeSizeData      TradeSizeData?
  priceStats         PriceStats?
  monthlyPerformance MonthlyPerformance[]
  weeklyWinRate      WeeklyWinRate[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  lastSyncedAt       DateTime?

  @@index([address])
  @@index([updatedAt])
  @@map("UserAnalytics")
}

model MarketDistribution {
  id            String        @id @default(cuid())
  userId        String
  user          UserAnalytics @relation(fields: [userId], references: [id], onDelete: Cascade)
  market        String
  value         Int
  trades        Int
  volume        Float
  uniqueMarkets Int
  createdAt     DateTime      @default(now())

  @@unique([userId, market])
  @@index([userId])
  @@map("MarketDistribution")
}

model BuySellData {
  id             String        @id @default(cuid())
  userId         String        @unique
  user           UserAnalytics @relation(fields: [userId], references: [id], onDelete: Cascade)
  buyPercentage  Int
  sellPercentage Int
  buyVolume      Float
  sellVolume     Float
  buyCount       Int
  sellCount      Int
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("BuySellData")
}

model TradeSizeData {
  id           String        @id @default(cuid())
  userId       String        @unique
  user         UserAnalytics @relation(fields: [userId], references: [id], onDelete: Cascade)
  averageSize  Float
  medianSize   Float
  minSize      Float
  maxSize      Float
  smallTrades  Int
  mediumTrades Int
  largeTrades  Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("TradeSizeData")
}

model PriceStats {
  id           String        @id @default(cuid())
  userId       String        @unique
  user         UserAnalytics @relation(fields: [userId], references: [id], onDelete: Cascade)
  averagePrice Float
  minPrice     Float
  maxPrice     Float
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("PriceStats")
}

model MonthlyPerformance {
  id        String        @id @default(cuid())
  userId    String
  user      UserAnalytics @relation(fields: [userId], references: [id], onDelete: Cascade)
  month     String
  yearMonth String
  profit    Float
  volume    Float
  trades    Int
  createdAt DateTime      @default(now())

  @@unique([userId, yearMonth])
  @@index([userId])
  @@index([yearMonth])
  @@map("MonthlyPerformance")
}

model WeeklyWinRate {
  id          String        @id @default(cuid())
  userId      String
  user        UserAnalytics @relation(fields: [userId], references: [id], onDelete: Cascade)
  week        String
  weekDate    DateTime
  winRate     Float
  totalTrades Int
  createdAt   DateTime      @default(now())

  @@unique([userId, weekDate])
  @@index([userId])
  @@index([weekDate])
  @@map("WeeklyWinRate")
}

model BlogPost {
  id           String    @id @default(cuid())
  slug         String    @unique
  title        String
  description  String?
  date         DateTime?
  tagsArray    String[]  @default([]) @map("tags_array")
  thumbnail    String?
  featured     Boolean   @default(false)
  readTime     String?
  published    Boolean   @default(true)
  authorUserId String?   @map("author_user_id")
  authorUser   User?     @relation(fields: [authorUserId], references: [id], onDelete: SetNull)
  content      String    @db.Text
  tags         String
  author       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([slug])
  @@index([published])
  @@index([date])
  @@map("BlogPost")
}

model Notification {
  id            String   @id @default(cuid())
  userId        String
  userEmail     String
  walletAddress String
  tradeType     String
  amount        String
  market        String
  timestamp     DateTime @default(now())
  read          Boolean  @default(false)

  @@index([userId])
  @@index([userEmail])
  @@index([read])
  @@map("Notification")
}
